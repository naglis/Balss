<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="balss">
	<schema id="com.github.nvlgit.Balss" path="/com/github/nvlgit/Balss/">

 		<key name="play-last" type="b">
			<default>true</default>
			<summary>Is the light switched on?</summary>
			<description>
				After launch, play the last URI from the last played position.
			</description>
		</key>

	  <key name="last-uri" type="s">
      <default>'none'</default>
      <summary>Last URI</summary>
      <description>Last played URI.</description>
    </key>

	  <key name="last-position" type="x">
      <default>0</default>
			<summary>Last position</summary>
      <description>Last position of the last played URI.</description>
    </key>

	  <key name="play-rate" type="d">
      <range min="0.5" max="1.5"/>
      <default>1.0</default>
			<summary>Playback rate</summary>
    </key>

 		<key name="show-chapter-list" type="b">
			<default>true</default>
			<summary>Show chapter list</summary>
		</key>


	</schema>
</schemalist>
